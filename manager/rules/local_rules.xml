<group name="infostealer,phantomgrid">

  <!-- Execution -->
  <rule id="83001" level="10">
    <match>INFOSTEALER_EXECUTION</match>
    <description>Infostealer execution detected</description>
    <mitre>
      <id>T1059</id>
    </mitre>
  </rule>

  <!-- Browser Access -->
  <rule id="83002" level="12">
    <match>Login Data accessed</match>
    <description>Chrome credential database accessed</description>
    <mitre>
      <id>T1555.003</id>
    </mitre>
  </rule>

  <rule id="83003" level="12">
    <match>Cookies accessed</match>
    <description>Browser cookies accessed</description>
    <mitre>
      <id>T1539</id>
    </mitre>
  </rule>

  <!-- Archive -->
  <rule id="83004" level="10">
    <match>Archive created</match>
    <description>Data staged for exfiltration</description>
    <mitre>
      <id>T1560</id>
    </mitre>
  </rule>

  <!-- Exfiltration -->
  <rule id="83005" level="15">
    <match>EXFILTRATION_ATTEMPT</match>
    <description>Possible C2 data exfiltration</description>
    <mitre>
      <id>T1041</id>
    </mitre>
  </rule>

  <!-- Persistence -->
  <rule id="83006" level="13">
    <match>PERSISTENCE_CRON</match>
    <description>Persistence via cron detected</description>
    <mitre>
      <id>T1053</id>
    </mitre>
  </rule>

</group>