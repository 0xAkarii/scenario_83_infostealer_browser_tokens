    <mitre><id>T1053</id></mitre>
  </rule>

  <!-- ================= FINAL STATUS ================= -->

  <rule id="189050" level="5">
    <match>FINAL_STATUS</match>
    <description>Scenario83: Investigation status logged</description>
  </rule>

  <rule id="189051" level="3">
    <match>SCENARIO_83_COMPLETE</match>
    <description>Scenario83: Completion flag detected</description>
  </rule>

